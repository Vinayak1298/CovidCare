<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    tools:context=".HomePageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/maleteacher"
                        android:padding="8dp"
                        android:background="@drawable/circle" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="10dp"
                    android:text="Hi, Rajat"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/midnightBlue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:rotationY="180"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_menu2"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:scrollbars="none"
        android:orientation="vertical"
        android:layout_marginTop="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="0dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans"
                        android:paddingTop="10dp"
                        android:text="Covid-19 Cases - India"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:textColor="@color/midnightBlue"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@color/periwinkle"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:padding="10dp"
                        android:background="@color/periwinkle">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:background="@drawable/card_corners"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/opensans"
                                android:text="Confirmed"
                                android:textAllCaps="true"
                                android:textColor="@color/midnightBlue"
                                android:textSize="9sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvhpaconfirmed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/opensans"
                                android:textAllCaps="true"
                                android:textColor="@color/midnightBlue"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:background="@drawable/card_corners"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/opensans"
                                android:text="Active"
                                android:textAllCaps="true"
                                android:textColor="@color/midnightBlue"
                                android:textSize="9sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvhpaactive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/opensans"
                                android:textAllCaps="true"
                                android:textColor="@color/midnightBlue"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:background="@drawable/card_corners"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/opensans"
                                android:text="Recovered"
                                android:textAllCaps="true"
                                android:textColor="@color/midnightBlue"
                                android:textSize="9sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvhparecovered"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/opensans"
                                android:textAllCaps="true"
                                android:textColor="@color/midnightBlue"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:background="@drawable/card_corners"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/opensans"
                                android:text="Deceased"
                                android:textAllCaps="true"
                                android:textColor="@color/midnightBlue"
                                android:textSize="9sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvhpadeceased"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/opensans"
                                android:textAllCaps="true"
                                android:textColor="@color/midnightBlue"
                                android:textSize="16sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans"
                        android:text="Via: covid19india.org"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        android:textAlignment="textEnd"
                        android:layout_centerVertical="true"
                        android:textColor="@color/midnightBlue"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@color/periwinkle"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvhpacard1"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/lightSkin">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:padding="10dp"
                            android:src="@drawable/bloodtest"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/opensans"
                            android:textAlignment="center"
                            android:paddingBottom="10dp"
                            android:text="Testing Centres\nNear Me"
                            android:textColor="@color/midnightBlue"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvhpacard2"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/periwinkle">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:padding="10dp"
                            android:src="@drawable/isolationward"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/opensans"
                            android:textAlignment="center"
                            android:paddingBottom="10dp"
                            android:text="Beds / Isolation\nWards Near Me"
                            android:textColor="@color/midnightBlue"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvhpacard3"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/palePink">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:padding="10dp"
                            android:src="@drawable/helpsomeone"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/opensans"
                            android:textAlignment="center"
                            android:paddingBottom="10dp"
                            android:text="Help\nSomeone"
                            android:textColor="@color/midnightBlue"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvhpacard4"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/skinColor">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:padding="10dp"
                            android:scaleX="1.2"
                            android:scaleY="1.2"
                            android:src="@drawable/get_help"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/opensans"
                            android:textAlignment="center"
                            android:paddingBottom="10dp"
                            android:text="Get\nHelp"
                            android:textColor="@color/midnightBlue"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvhpacard5"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/lightSkin">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:padding="10dp"
                            android:src="@drawable/faq"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/opensans"
                            android:textAlignment="center"
                            android:paddingBottom="10dp"
                            android:text="Covid-19\nFAQs"
                            android:textColor="@color/midnightBlue"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvhpacard6"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/periwinkle">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:padding="10dp"
                            android:src="@drawable/covid19"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/opensans"
                            android:textAlignment="center"
                            android:paddingBottom="10dp"
                            android:text="About\nCovid-19"
                            android:textColor="@color/midnightBlue"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>